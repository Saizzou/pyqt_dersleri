        self.line_sonuc.setText(icerik)

    def parantez_ac(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "("
        self.line_sonuc.setText(icerik)

    def parantez_kapa(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + ")"
        self.line_sonuc.setText(icerik)

    def silme(self):
        self.line_sonuc.setText("")

    def topla(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "+"
        self.line_sonuc.setText(icerik)

    def cikarma(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "-"
        self.line_sonuc.setText(icerik)

    def carpma(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "*"
        self.line_sonuc.setText(icerik)

    def bolme(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "/"
        self.line_sonuc.setText(icerik)

    def esitlik(self):
        icerik = self.line_sonuc.text()
        try:
            if "%" in icerik:
                icerik = icerik.strip("%")
                cevap = int(icerik) / 100
            else:
                cevap = eval(icerik)
            self.line_sonuc.setText(str(cevap))
        except:
            self.line_sonuc.setText("Hatali Girdi!")

    def yuzde(self):
        icerik = self.line_sonuc.text()
        icerik = icerik + "%"
        self.line_sonuc.setText(icerik)



